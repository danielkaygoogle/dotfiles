# Otherwise you don't get color terminals
export TERM='xterm-256color'

# Fast escape key response
export KEYTIMEOUT=1

# Changes ls sort order
export LANG="C"

# Shortcut to ack
alias ack='ack-grep'

# Add CUDA to paths
export PATH=/usr/local/cuda/bin:$PATH
export LD_LIBRARY_PATH=/usr/local/cuda/lib64:$LD_LIBRARY_PATH 

# Include the Voci APIs
export PYTHONPATH='/home/mnye/worksp/boxsystem':$PYTHONPATH

# Add voci code to path
export PATH=/home/mnye/worksp/sphinx/deploy/bin:$PATH
export PATH=/home/mnye/worksp/vad/src:$PATH

# Convenience shortcut to clienttest
alias clt='python /home/mnye/worksp/boxsystem/clienttest.py'
alias cltvm='clt -s 10.173.215.101'
alias cltg1='clt -s vocig1'
alias cltg8='clt -s vocig8'
