# Otherwise you don't get color terminals
export TERM='xterm-256color'

# Fast escape key response
export KEYTIMEOUT=1

# Shortcut to ack
alias ack='ack-grep'

# Add CUDA to paths
export PATH=/usr/local/cuda/bin:$PATH
export LD_LIBRARY_PATH=/usr/local/cuda/lib64:$LD_LIBRARY_PATH 

# Include the Voci Python APIs
export PYTHONPATH='/home/mnye/wrksp/boxsystem':$PYTHONPATH

# Add voci code to path
export PATH=/home/mnye/wrksp/sphinx/deploy/bin:$PATH
export PATH=/home/mnye/wrksp/vad/src:$PATH
