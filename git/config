# vim: filetype=cfg

[user]
    name = Michael Nye
    email = thenyeguy@gmail.com

[core]
    editor = vim
    excludesfile = ~/.dotfiles/git/ignore
    pager = "less -F -X"

[advice]
    statusHints = false
[color]
    ui = auto
[column]
    ui = auto

[push]
    default = simple
[pull]
    rebase = true

[diff]
    tool = vimdiff
[merge]
    tool = vimdiff
    conflictstyle = diff3
[mergetool]
    prompt = false

[alias]
    amend = commit --amend --no-edit
    fixup = "!f() { TARGET=$(git rev-parse "$1"); git commit --fixup=$TARGET && GIT_SEQUENCE_EDITOR=: git rebase -i --autostash --autosquash $TARGET^; }; f"
    fuck = reset --hard
    new = "!f() { git checkout -b $1 master; }; f"
    reword = commit --amend
